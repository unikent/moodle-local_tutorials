<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/tutorials/db" VERSION="20141002" COMMENT="XMLDB file for Moodle local/tutorials"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tutorials" COMMENT="Stores tutorials">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="url" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="order" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="element" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="contents" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="position" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="1" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tutorials_user_prefs" COMMENT="User preferences for tutorials">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="tutorialid" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="value" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="k_userid_tutorialid" TYPE="unique" FIELDS="userid, tutorialid"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="i_userid" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="i_tutorialid" UNIQUE="false" FIELDS="tutorialid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>